@model TP3_A1.Models.Servico

@{
    ViewBag.Title = "Detalhes do Serviço";
}

<h2>Detalhes do Serviço</h2>

<div>
    <h4>Serviço</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Oficina)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Oficina.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Veiculo.Modelo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Veiculo.Modelo)
        </dd>

        <dt>
            Categorias
        </dt>
        <dd>
            @if (Model.ServicoCategorias != null && Model.ServicoCategorias.Any())
            {
                foreach (var categoria in Model.ServicoCategorias)
                {
                    <span>@categoria.CategoriaServico.Nome</span><br />
                }
            }
            else
            {
                <span>Nenhuma categoria associada.</span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Observacoes)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Observacoes)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.ServicoId }) |
    @Html.ActionLink("Voltar para a lista", "Index")
</div>
